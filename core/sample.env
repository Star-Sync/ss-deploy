POSTGRES_DB=ss_database
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# Web configuration
NEXT_PUBLIC_API_HOST=${SS_CORE_HOST}
NEXT_PUBLIC_API_PORT=${SS_CORE_PORT}
